{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020", "dom"], // Added "dom" to include DOM type definitions
    "module": "ESNext",
    "preserveConstEnums": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "target": "ESNext",
    "types": ["node"],
    "outDir": "dist",
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "skipLibCheck": true // Skip type checking of all declaration files (*.d.ts) in node_modules
  },
  "exclude": ["node_modules"],
  "esm": true
}
